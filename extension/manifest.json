{
  "name": "Coretax Token Sniffer",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Capture Coretax access tokens and send them to Streamlit.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://coretaxdjp.pajak.go.id/*",
    "https://coretax-orientcomp.streamlit.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://coretaxdjp.pajak.go.id/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://coretax-orientcomp.streamlit.app/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page_hook.js"],
      "matches": ["https://coretaxdjp.pajak.go.id/*"]
    }
  ]
}
