{
  "name": "Coretax Token Extractor",
  "version": "2.0",
  "manifest_version": 3,
  "description": "Capture Coretax access tokens and send them to Streamlit.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://coretaxdjp.pajak.go.id/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://coretaxdjp.pajak.go.id/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pako.min.js", "page_hook.js"],
      "matches": ["https://coretaxdjp.pajak.go.id/*"]
    }
  ]
}
